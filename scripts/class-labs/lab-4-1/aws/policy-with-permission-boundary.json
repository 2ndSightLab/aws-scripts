{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SetPermissionsBoundary",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy"
            ],
            "Resource": "arn:aws:iam::[YOUR ACCOUNT NUMBER]:role/Boundary*",
            "Condition": {
                "StringEquals": {
                    "iam:permissionsboundary": "arn:aws:iam::[YOUR ACCOUNT NUMBER]:policy/prod-permission-boundary"
                }
            }
        },
        {
            "Sid": "CreateAndEditPermissionsPolicy",
            "Effect": "Allow",
            "Action": [
                "iam:CreatePolicy",
                "iam:CreatePolicyVersion",
                "iam:DeletePolicyVersion"
            ],
            "Resource": "arn:aws:iam::[YOUR ACCOUNT NUMBER]:policy/ProdDeploy*"
        },
        {
            "Sid": "PassRole",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole"
            ],
            "Resource": "arn:aws:iam::[YOUR ACCOUNT NUMBER]:role/ProdDeploy*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:Get*",
                "iam:List*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:*AccessKey*",
                "iam:ChangePassword",
                "iam:GetUser",
                "iam:ListUsers",
                "iam:*ServiceSpecificCredential*",
                "iam:*SigningCertificate*",
                "iam:CreateVirtualMFADevice",
                "iam:DeleteVirtualMFADevice",
                "iam:DeactivateMFADevice",
                "iam:ListGroupPolicies"
            ],
            "Resource": [
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:mfa/${aws:username}",
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:user/${aws:username}",
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:user/"
            ]
        },
        {
            "Sid": "AllowAllButIAM",
            "Effect": "Allow",
            "NotAction": [
                "iam:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "BlockMostAccessUnlessSignedInWithMFA",
            "Effect": "Deny",
            "NotAction": [
                "iam:CreateVirtualMFADevice",
                "iam:EnableMFADevice",
                "iam:ListMFADevices",
                "iam:ListVirtualMFADevices",
                "iam:ListUsers",
                "iam:ResyncMFADevice"
            ],
            "Resource": [
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:mfa/${aws:username}",
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:user/${aws:username}",
                "arn:aws:iam::[YOUR ACCOUNT NUMBER]:user/"
            ],
            "Condition": {
                "BoolIfExists": {
                    "aws:MultiFactorAuthPresent": "false"
                }
            }
        }
    ]
}
